<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import java.net.URL?>
<GridPane fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <stylesheets>
        <URL value="@menu.css"/>
    </stylesheets>
    <Label fx:id="title" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.halignment="CENTER" styleClass="title">BattleShip</Label>
    <Button fx:id="connect" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.halignment="CENTER" styleClass="connect">Connect to Server</Button>
    <Button fx:id="exit" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.halignment="CENTER" styleClass="exit">Exit</Button>
</GridPane>